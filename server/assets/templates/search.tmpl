<!DOCTYPE html>
<html>
  {{ template "head" . }}

  <body>
    {{ template "intro" . }}

    <h2>Search</h2>

    <script>
     function clear_results() {
       jQuery("#results")[0].innerHTML = ""
     } // function clear_results()

     function clear_filters() {
       $("#search_filters checkbox").each(() => { $(this).checked = false })
     } // function clear_filters()
    </script>

    <div class="wrapper">
      
      <div class="row" id="search_filters">
        <div class="col">
          <ul>
            {{ range .Hosts }}
            <li>
              <input type="checkbox"
                     id="filter_host_{{ .ID }}"
                     value="{{ .ID }}" />
              {{ .NameShort }}
            </li>
            {{ end }}
          </ul>
        </div>
        
        <div class="col">
          <ul>
            {{ range $src, $cnt := .Sources }}
            <li>
              <input type="checkbox"
                     id="filter_src_{{ sanitize $src }}" />
              {{ $src }} ({{ $cnt }})
            </li>
            {{ end }}
          </ul>
        </div>

        <div class="col">
          <table class="horizontal">
            <tr>
              <th>Begin:</th>
              <td>
                <input type="datetime-local"
                       id="filter_period_begin" />
              </td>
            </tr>
            <tr>
              <th>End:</th>
              <td>
                <input type="datetime-local"
                       id="filter_period_end" />
              </td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <input type="button" value="Search" />
        </div>
        <div class="col">
          <input type="button" value="Clear" onclick="clear_filters()"/>
        </div>
      </div>

      <div id="results" class="row">
        Bla
      </div>

    </div>

    {{ template "footer" . }}
  </body>
</html>
{{ end }}
