<!DOCTYPE html>
<html>
  {{ template "head" . }}

  <body>
    {{ template "intro" . }}

    <h2>Search</h2>

    <script type="text/javascript">
     function clear_results() {
       jQuery("#results")[0].innerHTML = ""
     } // function clear_results()

     function clear_filters() {
       let boxes = jQuery("#search_filters input[type=checkbox]")

       for (var i = 0; i < boxes.length; i++) {
         boxes[i].checked = false
       }
     } // function clear_filters()

     function perform_search() {
       const hosts = _.map(_.filter(jQuery("#select_hosts input[type=checkbox]"),
                                          (x) => { return x.checked }),
                           (x) => { return x.value })


       const sources = _.map(
         _.filter(
           jQuery("#select_sources option"),
           (x) => { return x.selected }
         ),
         (x) => { return x.value })

       const period = _.map(jQuery("#search_filters input[type=datetime-local]"),
                            (x) => { return x.valueAsDate })

       const query = {
         "hosts": _.map(hosts, (x) => { return Number.parseInt(x) }),
         "sources": sources,
         "period": period,
       }

       const qstr = JSON.stringify(query)

       const req = $.post("/ajax/search",
                          qstr,
                          (res) => {
         console.log(res)
         const div = jQuery("#results")[0]
         div.innerHTML = res.Payload["search_results"]
       },
                          'json')

       req.fail(function (reply, status_text, xhr) {
         console.log(`Error searching: ${status_text} ${reply} ${xhr}`)
       })

       console.log("Things have never been better")
     } // function perform_search()

     function clear_results() {
       const resDiv = jQuery("#results")[0]
       resDiv.innerHTML = "&nbsp;"
     }
    </script>

    <div class="container">
      
      <div class="row" id="search_filters">
        <div class="col">
          <ul id="select_hosts">
            {{ range .Hosts }}
            <li>
              <input type="checkbox"
                     id="filter_host_{{ .ID }}"
                     value="{{ .ID }}" />
              {{ .NameShort }}
            </li>
            {{ end }}
          </ul>
        </div>
        
        <div class="col">
          <select id="select_sources" multiple size="20">
            {{ range $src, $cnt := .Sources }}
            <option>{{ $src }}</option>
            {{ end }}
          </select>
        </div>

        <div class="col">
          <table class="horizontal" id="select_period">
            <tr>
              <th>Begin:</th>
              <td>
                <input type="datetime-local"
                       value="{{ fmt_time_form .Begin }}"
                       id="filter_period_begin" />
              </td>
            </tr>
            <tr>
              <th>End:</th>
              <td>
                <input type="datetime-local"
                       value="{{ fmt_time_form .End }}"
                       id="filter_period_end" />
              </td>
            </tr>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <input type="button" value="Search" onclick="perform_search()" />
        </div>
        <div class="col">
          <input type="button" value="Clear Filters" onclick="clear_filters()" />
        </div>
        <div class="col">
          <input type="button" value="Clear Results" onclick="clear_results()" />
        </div>
      </div>

      <div id="results" class="row">
        Bla
      </div>

    </div>

    {{ template "footer" . }}
  </body>
</html>
{{ end }}
