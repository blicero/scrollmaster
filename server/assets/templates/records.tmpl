{{ define "records" }}
{{/* Created on 05. 09. 2024 */}}
{{/* Time-stamp: <2024-09-05 21:18:41 krylon> */}}

<table class="table">
  <thead>
    <tr>
      <th>Host</th>
      <th>Time</th>
      <th>Source</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody>
    {{ $hosts := .Hostnames }}
    {{ range .Records }}
    <tr>
      <td>{{ index $hosts .HostID }}</td>
      <td>{{ fmt_time .Time }}</td>
      <td>{{ .Source }}</td>
      <td>{{ .Message }}</td>
    </tr>
    {{ end }}
  </tbody>
</table>

{{ end }}
